<!DOCTYPE html>
<div class="col-md-6 col-sm-offset-3">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h1 class="panel-title">
              Items
            </h1>
          </div>
          <div class="panel-body">
            <input class="form-control" data-action="filter" data-filters="#dev-table" id="dev-table-filter" placeholder="Filter users" type="text" />
          </div>
          <table class="table table-hover" id="dev-table">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>State</th>
              </tr>
            </thead>
            <tbody>
              <% @items.each do |item| %>
                <tr>
                  <td>-</td>
                  <td>
                    <%= item.name %>
                  </td>
                  <td>
                    <%= item.description %>
                  </td>
                  <td>
                    <%= check_state(item) %>
                  </td>
                  <td>
                    <%= link_to 'Request item', request_item_path, class: "btn btn-round" %>
                  </td>
                </tr>
                <% end %>
            </tbody>
          </table>
        </div>
        <%= link_to 'Back to users', users_path, class: "btn btn-round" %>
      </div>
    </div>
  </div>
</div>
